generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "darwin", "darwin-arm64", "windows"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Group {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  channels Channel[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Channel {
  id              String    @id // YouTube Channel ID
  url             String
  name            String
  thumbnail       String?
  subscriberCount Int       @default(0)
  viewCount       BigInt    @default(0)
  videoCount      Int       @default(0)
  
  groupId         Int?
  group           Group?    @relation(fields: [groupId], references: [id])
  isFavorite      Boolean   @default(false)
  
  videos          Video[]
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Video {
  id            String   @id // YouTube Video ID
  title         String
  url           String
  thumbnail     String?
  publishedAt   DateTime
  viewCount     BigInt   @default(0)
  likeCount     Int?
  commentCount  Int?
  isShort       Boolean  @default(false)
  isFavorite    Boolean  @default(false)
  localPath     String?
  
  channelId     String
  channel       Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([channelId])
}

model ApiKey {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  name      String?
  isActive  Boolean  @default(true)
  usageToday Int     @default(0)
  lastUsed  DateTime @default(now())
  createdAt DateTime @default(now())
}

model Settings {
  id           Int      @id @default(autoincrement())
  downloadPath String   @default("")
  proxyUrl     String?
  cookieSource String?  @default("none") // "none", "chrome", "firefox", "edge" or path
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
